{
    "name": "alcides",
    "version": "1.0.0",
    "description": "Yet another javascript unit testing framework.",
    "repository": "git@github.com:augustinesaidimu/alcides.git",
    "author": "saidimu",
    "license": "MIT",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "ci": "yarn install --frozen-lockfile",
        "clean": "rm -rf dist",
        "prebuild": "yarn clean",
        "build": "yarn tsc",
        "build:watch": "yarn tsc --watch",
        "pretest:ci": "yarn build",
        "test:ci": "yarn test",
        "test": "node ./dist/index.js",
        "test:watch": "nodemon -q",
        "build:dist": "./bin/dist.sh",
        "postversion": "cp -r package.json ../dist.package.json"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@types/chai": "^4.3.0",
        "@types/node": "^17.0.8",
        "chai": "^4.3.4",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "semantic-release": "^18.0.1",
        "typescript": "^4.6.0-dev.20220116"
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/changelog",
                {
                    "changelogFile": "CHANGELOG.md"
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "dist"
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "dist.package.json"
                    ],
                    "message": "chore(release): Release v${nextRelease.version}\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}
